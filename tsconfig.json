{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "allowJs": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
          "node_modules/@types",
          "src/typings"
      ],
      "rootDir": "src",
      "outDir": "dist"
  }
}